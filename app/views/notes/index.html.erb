<%= render 'navigation'%>


<div class="container"> 
<h1>List of Notes</h1>


<table class="tablt table striped">
	<thead>
	  <tr>
	    <th>Title</th>
	    <th>Votes</th>
	  </tr>
	</thead>
 	<tbody>
	  <% @notes.each do |note| %>
	    <tr>
			<td><%= link_to note.title, note_path(note)  %></td>
			<td><%= pluralize(note.votes.count, "vote") %></td>
    		<td><%= button_to 'upvote', upvote_note_path(note), method: :post %></td>
			<td>
				<%= link_to edit_note_path(note), class: "btn btn-default" do %>
					<i class="glyphicon glyphicon-wrench"></i>Edit
				<% end %>
			</td>
			<td><%= link_to 'Delete', note_path(note),
				method: :delete, data: { confirm: 'Are you sure?' } %>
			</td>
	    </tr>
	  <% end %>
	</tbody>
</table>
	<%= link_to 'Create New Note', new_note_path, class: 'btn btn-success' %>
		
</div>