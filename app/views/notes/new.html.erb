<div class="container">
<h1>Create a new note</h1>

<%= render 'form' %>

<h2>Add a comment:</h2>
<%= form_for([@note, @note.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', notes_path %>
</div>
